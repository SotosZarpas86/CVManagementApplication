<EditForm Model="_candidate" OnValidSubmit="Save" class="card card-body bg-light mt-1">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label for="name" class="col-md-2 col-form-label">First Name:</label>
        <div class="col-md-6">
            <InputText id="name" class="form-control" @bind-Value="_candidate.FirstName" />
            <ValidationMessage For="@(() => _candidate.FirstName)" />
        </div>
    </div>
    <div class="form-group row mt-1">
        <label for="name" class="col-md-2 col-form-label">Last Name:</label>
        <div class="col-md-6">
            <InputText id="name" class="form-control" @bind-Value="_candidate.LastName" />
            <ValidationMessage For="@(() => _candidate.LastName)" />
        </div>
    </div>
    <div class="form-group row mt-1">
        <label for="name" class="col-md-2 col-form-label">Email:</label>
        <div class="col-md-6">
            <InputText id="name" class="form-control" @bind-Value="_candidate.Email" />
            <ValidationMessage For="@(() => _candidate.Email)" />
        </div>
    </div>
    <div class="form-group row mt-1">
        <label for="name" class="col-md-2 col-form-label">Mobile:</label>
        <div class="col-md-6">
            <InputText id="name" class="form-control" @bind-Value="_candidate.Mobile" />
            <ValidationMessage For="@(() => _candidate.Mobile)" />
        </div>
    </div>
    <div class="form-group row mt-1">
        <label for="name" class="col-md-2 col-form-label">Degree:</label>
        <div class="col-md-6">
            <select class="form-control" id="fruit" @bind="_selectedDegree">
                @foreach (var degree in AvailableDegrees)
                {
                    <option value="@degree.Id">@degree.Name</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row mt-1">
        <label for="name" class="col-md-2 col-form-label">File To Upload:</label>
        <div class="col-md-6">
            <InputFile OnChange="@OnInputFileChange" accept=".pdf" />
        </div>
    </div>
    <div class="row mt-1">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </div>
</EditForm>
